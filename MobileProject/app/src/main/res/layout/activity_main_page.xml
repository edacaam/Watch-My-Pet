<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="190dp"
            android:layout_height="58dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/btnHostAra"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:text="Host Arayanlar"
            android:textAllCaps="false"
            android:textColor="#FF5722"
            android:textSize="14dp"
            app:icon="@drawable/search"
            app:iconSize="20dp"
            app:iconTint="#FF5722" />

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:text="Profil"
            android:textAllCaps="false"
            android:textColor="#FF5722"
            android:textSize="14dp"
            app:icon="@drawable/account"
            app:iconSize="24dp"
            app:iconTint="#FF5722" />

        <Button
            android:id="@+id/btnCikis"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:text="Button"
            app:icon="@drawable/exit"
            app:iconSize="22dp"
            app:iconTint="#FF5722" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="216dp">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="220dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:keepScreenOn="true"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="231dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAddress"
                android:layout_width="203dp"
                android:layout_height="65dp"
                android:layout_marginStart="30dp"
                android:text="Nerede?"
                android:textColor="#474646"
                android:textSize="16dp"
                app:icon="@drawable/map"
                app:iconSize="18dp"
                app:iconTint="#FF5722" />

            <Spinner
                android:id="@+id/spAddress"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="249dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPet"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:text="Köpek"
                android:textColor="#474646"
                android:textSize="16dp"
                app:icon="@drawable/pawprint"
                app:iconSize="18dp"
                app:iconTint="#FF5722" />

            <Spinner
                android:id="@+id/spPet"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btnStartDate"
            android:layout_width="200dp"
            android:layout_height="62dp"
            android:layout_marginStart="30dp"
            android:onClick="selectStartDate"
            android:text="Başlangıç"
            android:textColor="#474646"
            android:textSize="16dp"
            app:icon="@drawable/calendar"
            app:iconSize="18dp"
            app:iconTint="#FF5722"
            app:layout_constraintBottom_toTopOf="@+id/btnHostBul" />

        <Button
            android:id="@+id/btnEndDate"
            android:layout_width="200dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:onClick="selectEndDate"
            android:text="Bitiş"
            android:textColor="#474646"
            android:textSize="16dp"
            app:icon="@drawable/calendar"
            app:iconSize="18dp"
            app:iconTint="#FF5722" />
    </LinearLayout>

    <Button
        android:id="@+id/btnHostBul"
        android:layout_width="420dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:text="Host Bul"
        android:textSize="16dp"
        app:cornerRadius="18dp"
        app:icon="@drawable/search"
        app:iconSize="18dp" />

    <TextView
        android:id="@+id/txtWatchMyPet"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="7dp"
        android:text="Watch My Pet Nedir ?"
        android:textAlignment="center"
        android:textColor="#131D50"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="289dp"
        android:layout_height="102dp"
        android:layout_marginTop="5dp"
        android:text="Evcil hayvan bakıcılarına hizmet bedeli ödeyerek petlerinizi gönül rahatlığıyla emanet edebileceğiniz bir platformdur."
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#423C3C"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtIletisim"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:text="   İletişim"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="#423C3C"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPhone"
                android:layout_width="194dp"
                android:layout_height="43dp"
                android:background="#00FFFFFF"
                android:text="0212 026 26 26"
                android:textSize="13dp"
                app:icon="@drawable/phone"
                app:iconSize="36dp" />

            <Button
                android:id="@+id/btnMail"
                android:layout_width="255dp"
                android:layout_height="38dp"
                android:background="#00FFFFFF"
                android:text="watchmypet@gmail.com"
                android:textAllCaps="false"
                android:textSize="14dp"
                app:icon="@drawable/mail"
                app:iconSize="34dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#423C3C"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_wave" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>