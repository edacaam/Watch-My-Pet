<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:outlineProvider="bounds">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="246dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/btnRequest"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:text="Talep"
            android:textAllCaps="true"
            android:textColor="#FF5722"
            android:textSize="14dp"
            app:icon="@drawable/plus"
            app:iconSize="24dp"
            app:iconTint="#FF7F00" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:text="Ana Sayfa"
            android:textColor="#FF7F00"
            android:textColorHint="#E86868"
            android:textSize="14dp"
            app:icon="@drawable/home"
            app:iconSize="32dp"
            app:iconTint="#FF7F00" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblName"
        android:layout_width="345dp"
        android:layout_height="20dp"
        android:text="Ad Soyad"
        android:textColor="#232A53"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingRight="2dp"
            app:tint="#FF7F00"
            app:srcCompat="@drawable/account" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="419dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblEMail"
        android:layout_width="345dp"
        android:layout_height="20dp"
        android:text="E-Mail"
        android:textColor="#232A53"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMail"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tint="#FF7F00"
            app:srcCompat="@drawable/mail" />

        <EditText
            android:id="@+id/txtEMail"
            android:layout_width="398dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblTelefon"
        android:layout_width="345dp"
        android:layout_height="20dp"
        android:text="Telefon"
        android:textColor="#232A53"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingRight="2dp"
            app:tint="#FF7F00"
            app:srcCompat="@drawable/phone" />

        <EditText
            android:id="@+id/txtPhone"
            android:layout_width="399dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="phone"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblAddress"
        android:layout_width="345dp"
        android:layout_height="20dp"
        android:text="Adres"
        android:textColor="#232A53"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAddress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingRight="2dp"
            app:tint="#FF7F00"
            app:srcCompat="@drawable/map" />

        <EditText
            android:id="@+id/txtAddress"
            android:layout_width="403dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/imgBowl"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            app:srcCompat="@drawable/bowl" />

        <CheckBox
            android:id="@+id/cbBowl"
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:text="Mama Karşılıyorum"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgGarden"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/garden" />

        <CheckBox
            android:id="@+id/cbGarden"
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bahçem Var"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/car" />

        <CheckBox
            android:id="@+id/cbCar"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Evden Alım"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgNoSmoking"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            app:srcCompat="@drawable/nosmoking" />

        <CheckBox
            android:id="@+id/cbNoSmoking"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:text="Sigara İçilmez"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPet"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            app:srcCompat="@drawable/paw" />

        <CheckBox
            android:id="@+id/cbPet"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Petim Var"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgPoop"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/poop" />

        <CheckBox
            android:id="@+id/cbPoop"
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Eğitimi Olmayan Petleri Kabul Ediyorum"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgVet"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            app:srcCompat="@drawable/vet" />

        <CheckBox
            android:id="@+id/cbVet"
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Veterinere Götürüyorum"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgThird"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/third" />

        <CheckBox
            android:id="@+id/cbThird"
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1-3 Yıl Deneyim"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSecond"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            app:srcCompat="@drawable/second" />

        <CheckBox
            android:id="@+id/cbSecond"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3-5 Yıl Deneyim"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgFirst"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/first" />

        <CheckBox
            android:id="@+id/cbFirst"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5+ Yıl Deneyim"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="77dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="405dp"
            android:layout_height="68dp"
            android:layout_marginTop="8dp"
            android:text="Güncelle"
            app:cornerRadius="18dp"
            app:icon="@drawable/edit"
            app:iconSize="30dp"
            app:iconTint="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/btnReservation"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:backgroundTint="#0288D1"
        android:text="Rezervasyonlarım"
        app:cornerRadius="12dp"
        app:icon="@drawable/reservation"
        app:iconSize="32dp" />

</LinearLayout>
