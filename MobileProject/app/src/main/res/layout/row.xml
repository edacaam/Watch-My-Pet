<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#E7E8F6"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="93dp"
                android:layout_height="101dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/account" />

            <TextView
                android:id="@+id/lblNamev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblEmailv"
                android:layout_width="165dp"
                android:layout_height="27dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/lblCityv"
                app:layout_constraintTop_toBottomOf="@+id/lblCityv" />

            <TextView
                android:id="@+id/lblCityv"
                android:layout_width="95dp"
                android:layout_height="25dp"
                android:paddingLeft="4dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/lblNamev"
                app:layout_constraintTop_toBottomOf="@+id/lblNamev" />

            <TextView
                android:id="@+id/lblDatev"
                android:layout_width="154dp"
                android:layout_height="23dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:text="TextView"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblAnimalv"
                android:layout_width="123dp"
                android:layout_height="27dp"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/lblDatev"
                app:layout_constraintTop_toBottomOf="@+id/lblDatev" />

            <TextView
                android:id="@+id/lblPriceV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp"
                android:text="TextView"
                android:textColor="?android:attr/colorMultiSelectHighlight"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblAnimalv" />

            <LinearLayout
                android:layout_width="476dp"
                android:layout_height="49dp"
                android:layout_marginStart="4dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                <ImageView
                    android:id="@+id/imgrozet1"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet2"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet3"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet4"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet5"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet6"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet7"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet8"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet9"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="?attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/imgrozet10"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="?attr/selectableItemBackground" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>